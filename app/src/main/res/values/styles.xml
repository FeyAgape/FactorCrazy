<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/xsmall</item>
        <item name="android:layout_marginRight">@dimen/xsmall</item>
        <item name="android:layout_marginTop">@dimen/large</item>
        <item name="android:layout_marginBottom">@dimen/large</item>
        <item name="android:background">#FFF</item>
        <item name="android:elevation">@dimen/mini</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">@dimen/mini</item>
        <item name="android:contentDescription">images</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#757575</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_text_medium</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>

    <style name="Question">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/button_text_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>

    <style name="SocialImageView">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginLeft">@dimen/large</item>
    </style>

    <style name="SocialTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">@dimen/caption_small</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:layout_marginLeft">@dimen/large</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/title_large</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>
</resources>